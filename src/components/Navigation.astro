<script>

  async function setupSearch() {
    
    const input = document.querySelector(".search-bar-input");
    const results = document.querySelector(".showResults");

    // Carga el índice de posts
    const res = await fetch("/blog/search.json");
    const posts = await res.json();

    input.addEventListener("input", () => {
      const query = input.value.toLowerCase();
      results.innerHTML = "";

      if (!query) return;

      const filtered = posts.filter((post) =>
        post.title.toLowerCase().includes(query)
      );

     if(filtered.length > 0) {
        filtered.forEach((post) => {
          const li = document.createElement("li");
          li.classList.add("search-item"); // clase directa
          li.innerHTML = `<a href="${post.url}" style="text-decoration: none; color: black; font-size: 16px; font-weight: 200; display: inline-block; padding: 5px 15px;">${post.title}</a>`;
          results.appendChild(li);
        });
      }else{
        results.innerHTML = `<li style="text-decoration: none; color: black; font-size: 16px; font-weight: 200; display: inline-block; padding: 5px 15px;">No se encontraron resultados</li>`;  
      }
    
    });
  }
  setupSearch();
</script>

