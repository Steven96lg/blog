---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

export const prerender = true;

export async function getStaticPaths() {
  const ciberseguridad = await getCollection('ciberseguridad');
  return ciberseguridad.map(post => ({
    params: { slug: post.slug },
    props: { entry: post },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout>
  <Navigation />
  <article>
    <header>
      <h1>{entry.data.title}</h1>
      
      {entry.data.image && (
        <Image 
          src={entry.data.image} 
          alt={entry.data.title}
          width={800}
          height={400}
          class="cover-image"
        />
      )}
      <div class="meta">
        <span class="date-post">{new Date(entry.data.pubDate).toLocaleDateString('es-MX', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
        <span class="tag">{entry.data.tag}</span>
      </div>
    </header>
    
    <div class="content">
      <Content />
    </div>

    <div class="back-link">
      <a href="/blog/ciberseguridad">‚Üê Volver al Roadmap</a>
    </div>
  </article>
</Layout>

<style>
  article {
    max-width: 800px;
    margin: 100px auto;
    padding: 0 1rem;
    padding-bottom: 60px;
    font-family: "Archivo Narrow", serif;
  }

  header {
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1;
    color: #00e699;
  }

  .cover-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin: 1rem 0;
    font-size: 0.9rem;
    color: #666;
    & .date-post {
      background-color: rgb(44, 146, 172);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
    }
  }

  .tag {
    background: black;
    color: white;
    padding: 0.25rem 0.75rem;
    font-size: 1rem;
    border-radius: 4px;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: white;
    font-style: italic;
  }

  .content {
    line-height: 1.7;
    font-family: 'Archivo Narrow', serif;
    color: white;
  }

  .content :global(h2) {
    font-size: 1.8rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: white;
  }

  .content :global(h3) {
    font-size: 1.3rem;
    margin-top: 1.5rem;
    margin-bottom: 0.8rem;
    color: white;
  }

  .content :global(p) {
    margin: 1rem 0;
    color: white;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .content :global(pre){
    background: #f4f4f4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(code) {
    background: #f0f0f0;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
  }

  .content :global(a) {
    color: rgb(44, 146, 172);
    text-decoration: underline;
  }

  .content :global(a:hover) {
    color: rgb(28, 110, 132);
  }

  .back-link {
    margin-top: 40px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
  }

  .back-link a {
    color: rgb(44, 146, 172);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .back-link a:hover {
    color: rgb(28, 110, 132);
    transform: translateX(-5px);
  }

  @media (max-width: 480px) {
    article {
      margin-top: 100px;
    }

    h1 {
      font-size: 1.8rem;
    }

    .meta {
      flex-wrap: wrap;
    }
  }
</style>
