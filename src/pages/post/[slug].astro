---
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { entry: post },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

let postViews = 0;
---

<Layout>
  <Navigation />
  <article>
    <header>
      <h1>{entry.data.title}</h1>
      
      {entry.data.image && (
        <Image 
          src={entry.data.image} 
          alt={entry.data.title}
          width={800}
          height={400}
          class="cover-image"
        />
      )}
      <div class="meta">
        <span class="date-post">{new Date(entry.data.pubDate).toLocaleDateString('es-MX', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
        <span class="tag">{entry.data.tag}</span>
      </div>
    </header>
    
    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  article {
    max-width: 800px;
    margin: 100px auto;
    padding: 0 1rem;
    padding-bottom: 60px;
    font-family: "Archivo Narrow", serif;
  }

  header {
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1;
    color: white;
  }

  .cover-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin: 1rem 0;
    font-size: 0.9rem;
    color: white;
    & .date-post {
      background-color: rgb(44, 146, 172);
      color: white;
      padding: 0.25rem 0.75rem;
    }
  }

  .tag {
    background: black;
    color: white;
    padding: 0.25rem 0.75rem;
    font-size: 1rem;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: white;
    font-style: italic;
  }

  .content {
    line-height: 1.7;
    font-family: 'Archivo Narrow', serif;
    color: white;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .content :global(pre){
    background: #f4f4f4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
</style>